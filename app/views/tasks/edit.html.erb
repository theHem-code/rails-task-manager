<h2>Edit task</h2>

<%= form_for(@task) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :details %><br>
  <%= f.text_field :details %>
  <br>
  <br>
  <%= f.label :completed %><br>
  <%= f.check_box :completed %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
